{
    "name" : "Zemi",
    "version": "1.0.0",
    "description": "An extension to download images in bulk from message boards or websites",
    "manifest_version": 3,
	"permissions" : [ 
        "tabs",
        "activeTab",
        "scripting",
        "downloads",
        "downloads.open",
        "storage"
     ],
    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },
    "icons": {
        "16": "img/icons/FAicon-16.png",
        "48": "img/icons/FAicon-48.png",
        "128": "img/icons/FAicon-128.png",
        "200": "img/icons/FAicon.png"
    },
    "action": {
        "default_title": "Zemi",
        "default_icon": "img/icons/FAicon.png",
        "default_popup": "popup.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "zemi_extension@example.com"
        }
    }
}